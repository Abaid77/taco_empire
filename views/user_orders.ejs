<%- include('./partials/_head') %>
    <%- include('./partials/_header') %>
<main class="container-fluid order-layout col-10 offset-1 justify-content-center">
  <article class="user-orders">
    <div class="orders-title">
      <p class="h4">Your Orders</p>
      <a href="/orders/<%= user %>" class="btn btn-outline-success">Refresh</a>
    </div>
    <div>
      <table class="table table-striped">
        <tr>
          <th>Order #</th>
          <th>Order</th>
          <th>Order Time</th>
          <th>Order Prep-time</th>
        </tr>
        <tbody id="your-orders">
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %> </td>
              <td>
                <%= orderList[order.id].beef !== undefined ? `Beef(${orderList[order.id].beef})` : ""%>
                <%= orderList[order.id].chicken !== undefined ? `Chicken(${orderList[order.id].chicken})` : ""%>
                <%= orderList[order.id].shrimp !== undefined ? `Shrimp(${orderList[order.id].shrimp})` : ""%>
              </td>
              <td><%= order.start_time %> </td>
              <td><%= order.duration === 0 ? "Calculating prep time..." : order.duration +" min"%> </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </article>
</main>
<%- include('./partials/_footer') %>
